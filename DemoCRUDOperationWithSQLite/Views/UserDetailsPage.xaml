<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoCRUDOperationWithSQLite.Views.UserDetailsPage"
             xmlns:viewmodel="clr-namespace:DemoCRUDOperationWithSQLite.ViewModels"
             x:DataType="viewmodel:UserDetailsPageViewModel"
             Title="UserDetailsPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Command="{Binding HomeCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>

<VerticalStackLayout Spacing="10" Margin="10" Padding="10">
        <Label Text="{Binding NewUserModel.Name}"></Label>
        <Label Text="{Binding NewUserModel.Email}"></Label>
        <Label Text="{Binding NewUserModel.Location}"></Label>
    </VerticalStackLayout>
</ContentPage>